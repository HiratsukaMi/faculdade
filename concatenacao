#include <iostream>
#include <stdlib.h>
#include <stdio.h>
#include <string>
#include <conio.h>

using namespace std;

main(){
	
	setlocale(LC_ALL, "Portuguese");
	
	int i = 0;
	int x = 0;
	string texto;
	string palavra;
	
	printf("Digite quantas palavras deseja inserir: \n");
	cin >> x;
	system("cls");
	
	for (i = 0; i < x; i++){
		
		printf("Digite a palavra desejada: \n");
		cin >> palavra;
		texto = texto + " " + palavra;
		system ("cls");
		
	}
	
	printf("O texto que você inseriu é: \n\n");
	cout << texto;
	cout << endl;
}
